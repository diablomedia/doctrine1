{
    "name": "diablomedia/doctrine1",
    "type": "library",
    "description": "PHP5+ Database ORM",
    "keywords": ["orm", "database"],
    "homepage": "http://www.doctrine-project.org",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {"name": "Konsta Vesterinen", "email": "kvesteri@cc.hut.fi"},
        {"name": "Jonathan Wage", "email": "jonwage@gmail.com"}
    ],
    "autoload": {
        "psr-0": {
            "Doctrine_": "lib/"
        },
        "classmap": [
            "lib/Doctrine.php"
        ]
    },
    "replace": {
        "doctrine/doctrine1": "*"
    },
    "repositories": [
        {
            "type": "vcs",
            "no-api": true,
            "url": "https://github.com/diablomedia/phpstorm-stubs"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-pdo": "*",
        "symfony/yaml": "^3.4 || ^4.1"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "^4.0 || ^5.0 || ^6.0 || ^7.0",
        "friendsofphp/php-cs-fixer": "2.16.3",
        "phpstan/phpstan": "0.12.19",
        "vimeo/psalm": "3.11.2"
    },
    "scripts": {
        "test": "cd tests && php run.php",
        "test-with-coverage": "cd tests && php run.php --coverage=clover",
        "phpstan": "phpstan analyze -c phpstan.neon --no-progress --ansi --memory-limit=768M",
        "psalm": "psalm --show-info=false",
        "static-analysis": [
            "@phpstan",
            "@psalm"
        ],
        "style-check": "php-cs-fixer fix --dry-run -vv"
    }
}
